<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="RedTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/BlueTitleStyle</item>
        <item name="android:actionBarTabTextStyle">@style/BlueTitleText</item>
        <item name="android:actionMenuTextColor">#308014</item>
    </style>

    <!-- ActionBar styles -->
    <style name="RedActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ic_forest</item>
    </style>
    
    <!-- ActionBar styles -->
    <style name="BlueTitleStyle"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/BlueTitleText</item>
        <item name="android:background">@drawable/ic_forest</item>
    </style>
    
    <!-- ActionBar title text -->
    <style name="BlueTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="BlueTabText"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#000080</item>
    </style>
    
    
</resources>
